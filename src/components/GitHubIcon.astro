---
import { Icon } from "astro-icon/components";

interface Props {
  href: string;
}

const { href } = Astro.props;
---

<a href={href} aria-label="GitHub" class="github-link">
  <Icon name="lucide:github" class="github-icon" />
</a>

<style>
  .github-link {
    text-decoration: none;
    color: var(--base-800);
    font-weight: 600;
    display: flex;
    align-items: center;
  }

  .github-icon {
    width: 1.5rem;
    height: 1.5rem;
    display: block;
    transition: opacity 0.2s;
  }

  .github-link:hover .github-icon {
    opacity: 0.7;
  }
</style>
