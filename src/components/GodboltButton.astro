---
import { Icon } from "astro-icon/components";

const { href = "https://godbolt.org/", text = "View on Godbolt" } = Astro.props;
---

<a href={href} target="_blank" rel="noopener noreferrer" class="godbolt-button">
  {text}
  <Icon name="lucide:arrow-up-right" />
</a>

<style>
  .godbolt-button {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background-color: var(--base-200, #2a2a2a);
    color: var(--text-heading, #f5f5f5);
    padding: 0.5rem 1rem;
    border-radius: 0.5rem;
    font-weight: normal;
    font-size: 0.875rem;
    text-decoration: none;
    transition:
      background-color 0.2s ease,
      transform 0.1s ease;
  }

  .godbolt-button:hover {
    background-color: var(--base-400, #444);
    transform: translateY(-1px);
  }

  .godbolt-button:active {
    transform: translateY(0);
  }

  .godbolt-button svg {
    width: 1rem;
    height: 1rem;
  }
</style>
