---
import { Icon } from "astro-icon/components";

interface Props {
  href?: string;
}

const { href = "/" } = Astro.props;
---

<a href={href} class="home-icon" aria-label="Back to homepage">
  <Icon name="lucide:home" size={18} />
  <span>Home</span>
</a>

<style>
  .home-icon {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--muted-color, #9ca3af);
    text-decoration: none;
    font-size: 0.95rem;
    transition: color 0.2s ease;
    margin-bottom: 1.5rem;
  }

  .home-icon:hover {
    color: var(--text-color, #f5f5f5);
  }

  [data-theme="light"] .home-icon {
    color: #6b7280;
  }

  [data-theme="light"] .home-icon:hover {
    color: #1f2937;
  }
</style>
