---
import { Icon } from "astro-icon/components";
---

<div class="search-container">
  <div class="search-box">
    <Icon name="lucide:search" class="search-icon" />
    <input
      type="text"
      id="search-input"
      class="search-input"
      placeholder="Search posts..."
      autocomplete="off"
    />
    <button id="search-clear" class="search-clear" aria-label="Clear search">
      <Icon name="lucide:x" />
    </button>
  </div>
</div>

<script>
  const searchInput = document.getElementById("search-input");
  const searchClear = document.getElementById("search-clear");
  const blogList = document.getElementById("blog-list");
  const noResults = document.getElementById("no-results");

  function filterPosts(query: string) {
    if (!blogList || !noResults) return;

    const normalizedQuery = query.toLowerCase().trim();
    const postItems = blogList.querySelectorAll(".blog-post-item");

    if (!normalizedQuery) {
      postItems.forEach((item) => item.classList.remove("hidden"));
      noResults.style.display = "none";
      return;
    }

    let visibleCount = 0;

    postItems.forEach((item) => {
      const title = item.getAttribute("data-title") || "";
      const description = item.getAttribute("data-description") || "";
      const tags = item.getAttribute("data-tags") || "";

      const matches =
        title.includes(normalizedQuery) ||
        description.includes(normalizedQuery) ||
        tags.includes(normalizedQuery);

      if (matches) {
        item.classList.remove("hidden");
        visibleCount++;
      } else {
        item.classList.add("hidden");
      }
    });

    noResults.style.display = visibleCount === 0 ? "block" : "none";
  }

  searchInput?.addEventListener("input", (e) => {
    const query = (e.target as HTMLInputElement).value;
    filterPosts(query);

    if (query.trim()) {
      if (searchClear) searchClear.style.display = "block";
    } else {
      if (searchClear) searchClear.style.display = "none";
    }
  });

  searchClear?.addEventListener("click", () => {
    if (searchInput) {
      (searchInput as HTMLInputElement).value = "";
      filterPosts("");
      searchClear.style.display = "none";
      searchInput.focus();
    }
  });
</script>

<style>
  .search-container {
    position: relative;
    width: 100%;
    margin-top: 2rem;
    margin-bottom: 3rem;
  }

  .search-box {
    position: relative;
    display: flex;
    align-items: center;
  }

  .search-icon {
    position: absolute;
    left: 1rem;
    width: 1.25rem;
    height: 1.25rem;
    color: var(--muted-color, #9ca3af);
    pointer-events: none;
  }

  .search-input {
    width: 100%;
    padding: 0.875rem 3rem 0.875rem 3rem;
    font-size: 0.95rem;
    color: var(--text-primary);
    background-color: var(--base-100);
    border: 1px solid var(--base-200);
    border-radius: 0.5rem;
    outline: none;
    transition: all 0.2s ease;
    font-family: system-ui;
  }

  .search-input:focus {
    border-color: var(--base-400);
    background-color: var(--base-200);
  }

  .search-input::placeholder {
    color: var(--muted-color, #9ca3af);
  }

  .search-clear {
    position: absolute;
    right: 0.75rem;
    display: none;
    padding: 0.25rem;
    background: none;
    border: none;
    cursor: pointer;
    color: var(--muted-color, #9ca3af);
    transition: color 0.2s ease;
  }

  .search-clear:hover {
    color: var(--text-color, #f5f5f5);
  }

  .search-clear svg {
    width: 1.25rem;
    height: 1.25rem;
  }
</style>
